
<li id="<%= feed_item.id %>">
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="title"><%= feed_item.title %></span>
  <span class="description"><%= feed_item.description %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <span id="like_<%= feed_item.id %>" class="glyphicon glyphicon-heart 
    <% if current_user.voted_for? feed_item %>liked<% end %>" 
    onclick="vote(<%= feed_item.id %>)"> </span>
  <span id="like_count_<%= feed_item.id %>"><%= feed_item.votes_for.size %></span>
    <!-- change the id of the play span -->
  <span id="<%= feed_item.youtube_id %>" class="play_button glyphicon glyphicon-play" 
    onclick="play('<%= feed_item.youtube_id %>', '<%= feed_item.id %>')"></span>
  <span id="play_count_<%= feed_item.id %>"><%= feed_item.play_count %></span>
  <% if current_user?(feed_item.user) %>
		<%= link_to raw("<span class='glyphicon glyphicon-trash'></span>"), feed_item, method: :delete, data: { confirm: "Are you sure you wish to delete this post?" }, title: feed_item.title %>	  	
  <% end %>
  <div id="video_<%= feed_item.id %>_container" class="video_container" hidden>
    <div id="video_<%= feed_item.id %>">
    </div>  	
  </div>

  <%= form_for Comment.new, :remote => true do |f| %>
    <%= f.hidden_field :post_id, :value => feed_item.id %>
    <p>
      <%= f.label :comment, "Comment" %><br />
      <%= f.text_area :comment %>
    </p>
    <p><%= f.submit %></p>
  <% end %>

  <div id="comments_<%= feed_item.id %>">
    <%= render partial: 'comments/comment', collection: feed_item.comments %> 
  </div>
  
</li>