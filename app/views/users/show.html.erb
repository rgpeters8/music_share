<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
        <%= render 'shared/stats' %>
      </section>
  </aside>
  
  <div class="span8">
  	<%= render 'follow_form' if signed_in? %>
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <%= will_paginate @feed_items %>
	  <ol class="posts">
	    <%= render partial: 'shared/feed_item', collection: @feed_items %>
	  </ol>
  	<%= will_paginate @feed_items %>
    <% end %>
  </div>
</div>