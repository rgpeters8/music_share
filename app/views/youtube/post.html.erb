<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  <!-- 	<%= f.label :title %>
    <%= f.text_field :title, value: @title %> -->

    <%= f.label :title %>
    <%= f.hidden_field :title, value: @title %>
    <%= @title %>
    
    <%= f.hidden_field :youtube_id, value: @id %>
    
    <%= f.label :category %>
    <%= f.select :category, [['Music','Music'],['TV','TV'],['Movies','Movies'],['Informational','Informational'],
    ['Current Events','Current Events'],['Sports','Sports'],['Other','Other']] %>
    
    <%= f.text_area :description, placeholder: "Description..." %>
      
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>